<!DOCTYPE html>
<html lang="en">
  <head>
    <title>trip planner</title>
    <%- include('partials/head') %>
  </head>
  <body>
    <%- include('partials/header') %>
    <content>
      <%- include('partials/attention', {title: "let ai do the work while you travel", pictureUrl: "/demo.gif"}) %>
      <div>
        <h2>itineraries</h2>
        <div class="spacer"></div>
        <div id="itineraries">
          <div class="box">
            <h2 class="fancy">Your destination</h2>
            <p>Where do you want to go?</p>
            <img src="/placeholder.webp" alt="Placeholder tropical image" />
          </div>
        </div>
      </div>
      <div>
        <h2>behind the scenes</h2>
        <div class="spacer"></div>
        <p>First you enter the important information</p>
        <p></p>
        <p><span class="fancy">where</span> you want to go</p>
        <p><span class="fancy">when</span> you want to go</p>
        <p><span class="fancy">what</span> you want to do</p>
        <p>
          Then like magic, chatGPT will determine the optimal places based off of too many factors to count, and provide
          you with a custom itinerary
        </p>
      </div>
    </content>
    <%- include('partials/footer') %>
    <script>
      // Function to load trips and populate the #itineraries div
      async function loadTrips() {
        try {
          // Fetch trips from the API endpoint
          const response = await fetch("/trips");
          if (!response.ok) {
            throw new Error("Failed to fetch trips");
          }
          const trips = await response.json();

          // Sort trips by startDate in descending order (newest first)
          trips.sort((a, b) => new Date(b.startDate) - new Date(a.startDate));

          // Select and clear the #itineraries div
          const itinerariesDiv = document.getElementById("itineraries");
          itinerariesDiv.innerHTML = ""; // Clear existing content

          // Populate with new trip boxes
          trips.forEach((trip) => {
            // Create box container
            const box = document.createElement("div");
            box.classList.add("box");

            // Add trip content to the box
            box.innerHTML = `
            <h2 class="fancy"><a href="/trip?id=${trip.id}">${trip.name}</a></h2>
            <p>${trip.description}</p>
            <img src="${trip.pictureUrl}" alt="${trip.name}" />
          `;

            // Append the box to the itineraries div
            itinerariesDiv.appendChild(box);
          });
        } catch (error) {
          console.error("Error loading trips:", error);
        }
      }

      // Load trips when the page is ready
      document.addEventListener("DOMContentLoaded", loadTrips);
    </script>
  </body>
</html>
